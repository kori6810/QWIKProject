<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent"><LinearLayout    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent">    <de.hdodenhof.circleimageview.CircleImageView        android:id="@+id/user_image"        android:layout_width="130dp"        android:layout_height="130dp"        android:src="@drawable/image_profile"        android:layout_marginTop="76dp"        android:layout_gravity="center_horizontal" />        <TextView        android:id="@+id/user_name"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Summer Fin"        android:textColor="#000000"        android:textSize="24sp"        android:fontFamily="@font/comfortaa"        android:layout_marginTop="18dp"        android:gravity="center_horizontal"/>    <TextView        android:id="@+id/user_location"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:text="Seoul, Korea"        android:textSize="13sp"        android:fontFamily="@font/roboto_bold"        android:textStyle="bold"        android:textColor="#000000"        android:layout_marginTop="2dp"        android:gravity="center_horizontal"/>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:layout_marginHorizontal="16dp"        android:layout_marginTop="44dp"        android:weightSum="3">                <TextView            android:id="@+id/user_weight"            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="83dp"            android:background="@drawable/information_text_bc"            android:text="Weight\n 53  kg"            android:textSize="15sp"            android:textColor="#BBBBBB"            android:layout_marginEnd="15dp"            android:gravity="center"/>        <TextView            android:id="@+id/user_age"            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="83dp"            android:background="@drawable/information_text_bc"            android:text="Age\n 22  y.o"            android:textSize="15sp"            android:textColor="#BBBBBB"            android:gravity="center"/>        <TextView            android:id="@+id/user_height"            android:layout_width="0dp"            android:layout_weight="1"            android:layout_marginStart="15dp"            android:layout_height="83dp"            android:background="@drawable/information_text_bc"            android:text="Height\n 160  cm"            android:textSize="15sp"            android:textColor="#BBBBBB"            android:gravity="center"/>    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:weightSum="2"        android:layout_marginHorizontal="20dp"        android:layout_marginTop="18dp">        <androidx.cardview.widget.CardView            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="110dp"            app:cardBackgroundColor="#FFBC00"            app:cardCornerRadius="10dp"            android:layout_marginEnd="20dp">            <TextView                android:layout_width="90dp"                android:layout_height="20dp"                android:textSize="15sp"                android:textColor="@color/white"                android:fontFamily="@font/roboto_bold"                android:text="Steps Today"                android:layout_margin="15dp"/>            <ImageView                android:layout_width="20dp"                android:layout_height="20dp"                android:src="@drawable/image_footstep"                android:layout_marginTop="15dp"                android:layout_marginStart="130dp"/>            <TextView                android:id="@+id/steps_count"                android:layout_width="90dp"                android:layout_height="30dp"                android:textSize="24sp"                android:textColor="@color/white"                android:fontFamily="@font/roboto_bold"                android:text="7500"                android:layout_marginTop="55dp"                android:layout_marginStart="15dp"/>            <TextView                android:layout_width="40dp"                android:layout_height="15dp"                android:text="steps"                android:textSize="12sp"                android:fontFamily="@font/roboto_bold"                android:textColor="@color/white"                android:layout_marginTop="81dp"                android:layout_marginStart="15dp"/>        </androidx.cardview.widget.CardView>        <androidx.cardview.widget.CardView            android:layout_width="0dp"            android:layout_weight="1"            android:layout_height="110dp"            app:cardBackgroundColor="#5DD3F5"            app:cardCornerRadius="10dp"            android:layout_marginStart="20dp">            <TextView                android:layout_width="90dp"                android:layout_height="20dp"                android:textSize="15sp"                android:textColor="@color/white"                android:fontFamily="@font/roboto_bold"                android:text="Calories"                android:layout_margin="15dp"/>            <ImageView                android:layout_width="20dp"                android:layout_height="20dp"                android:src="@drawable/ic_kcal"                android:layout_marginTop="15dp"                android:layout_marginStart="130dp"/>            <TextView                android:id="@+id/kcal_count"                android:layout_width="90dp"                android:layout_height="30dp"                android:textSize="24sp"                android:textColor="@color/white"                android:fontFamily="@font/roboto_bold"                android:text="1600"                android:layout_marginTop="55dp"                android:layout_marginStart="15dp"/>            <TextView                android:layout_width="40dp"                android:layout_height="15dp"                android:text="kcal"                android:textSize="12sp"                android:fontFamily="@font/roboto_bold"                android:textColor="@color/white"                android:layout_marginTop="81dp"                android:layout_marginStart="15dp"/>        </androidx.cardview.widget.CardView>    </LinearLayout></LinearLayout></RelativeLayout>