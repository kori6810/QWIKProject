<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
    <View android:id="@+id/back_to" android:layout_width="15dp" android:layout_height="15dp" android:layout_marginStart="20dp" android:layout_marginTop="60dp" android:background="@drawable/ic_back"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:fontFamily="More Fonts..."
        android:text="Log in"
        android:textColor="@color/black"
        android:textSize="25sp" />
    <EditText android:id="@+id/edit_email" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginHorizontal="20dp" android:layout_marginTop="40dp" android:background="@drawable/edit_email_bc" android:hint="Email" android:textColor="@color/black" android:textSize="15sp" android:fontFamily="@font/roboto_bold" android:padding="17dp"/>
    <EditText android:id="@+id/edit_password" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginHorizontal="20dp" android:layout_marginTop="16dp" android:background="@drawable/edit_email_bc" android:hint="Password" android:inputType="textPassword" android:textColor="@color/black" android:textSize="15sp" android:fontFamily="@font/roboto_bold" android:padding="17dp"/>
    <androidx.appcompat.widget.AppCompatButton android:id="@+id/login_btn" android:layout_width="match_parent" android:layout_height="52dp" android:layout_marginHorizontal="20dp" android:background="@drawable/button_bc" android:text="로그인하기" android:textColor="@color/white" android:textSize="13dp" android:fontFamily="@font/roboto_bold" android:layout_marginTop="16dp"/>
    <TextView android:layout_width="match_parent" android:layout_height="33dp" android:text="SNS게정으로 로그인하기" android:textColor="@color/black" android:textSize="13sp" android:fontFamily="@font/roboto_bold" android:layout_marginTop="42dp" android:layout_marginHorizontal="20dp" android:gravity="center"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="50dp" android:orientation="horizontal" android:weightSum="4" android:layout_marginTop="16dp" android:layout_marginHorizontal="60dp">
        <ImageView android:id="@+id/login_n" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:src="@drawable/image_n"/>
        <ImageView android:id="@+id/login_massenger" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:src="@drawable/ic_messenger"/>
        <ImageView android:id="@+id/login_facebook" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:src="@drawable/ic_facebook"/>
        <ImageView android:id="@+id/login_google" android:layout_width="0dp" android:layout_height="50dp" android:layout_weight="1" android:src="@drawable/ic_google"/>
    </LinearLayout>
    <TextView android:id="@+id/intent_sign_up" android:layout_width="match_parent" android:layout_height="52dp" android:text="게정이 없으신가요? 간편가입하기" android:textColor="#000000" android:textSize="13sp" android:background="@drawable/text_view_bc" android:layout_marginHorizontal="20dp" android:gravity="center" android:layout_marginTop="80dp"/>
    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#EEEEEE" android:layout_marginTop="48dp"/>
    <LinearLayout android:layout_width="match_parent" android:layout_height="65dp" android:orientation="horizontal" android:weightSum="3">
        <TextView android:id="@+id/find_id" android:layout_width="0dp" android:layout_weight="1.5" android:layout_height="match_parent" android:text="아이디 (이메일) 찿기" android:textSize="13sp" android:textColor="#494545" android:fontFamily="@font/roboto_bold" android:gravity="center" android:layout_marginStart="27dp"/>
        <View android:layout_width="2dp" android:layout_height="25dp" android:background="#EEEEEE" android:layout_gravity="center" android:layout_marginStart="30dp"/>
        <TextView android:id="@+id/find_password" android:layout_width="0dp" android:layout_weight="1" android:layout_height="match_parent" android:text="비밀번호 찿기" android:textSize="13sp" android:textColor="#494545" android:fontFamily="@font/roboto_bold" android:gravity="center" android:layout_marginStart="37dp"/>
    </LinearLayout>
    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#EEEEEE"/>
</LinearLayout>