<?xml version="1.0" encoding="utf-8"?><RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"    android:orientation="vertical"    android:layout_width="match_parent"    android:layout_height="match_parent">    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="GOOD MORNING"        android:textColor="#BBBBBB"        android:textSize="15sp"        android:textStyle="bold"        android:layout_marginTop="45dp"        android:layout_marginStart="25dp"/>    <TextView        android:layout_width="wrap_content"        android:layout_height="wrap_content"        android:text="Summer Fin"        android:textColor="#000000"        android:textSize="24sp"        android:textStyle="bold"        android:layout_marginTop="67dp"        android:layout_marginStart="25dp"/>        <androidx.appcompat.widget.AppCompatButton        android:layout_width="104dp"        android:layout_height="38dp"        android:text="share result"        android:textColor="@color/white"        android:textSize="10sp"        android:textStyle="bold|normal"        android:layout_marginTop="51dp"        android:layout_marginStart="250dp"        android:background="@drawable/button_bc"/>    <LinearLayout        android:layout_below="@id/week_day"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:orientation="horizontal"        android:layout_marginTop="10dp"        android:layout_marginHorizontal="25dp"        android:weightSum="7">        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="MO"            android:textStyle="bold"            android:textColor="@color/black"            android:textSize="12sp"            android:gravity="center"/>        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="TU"            android:textStyle="bold"            android:textColor="@color/black"            android:textSize="12sp"            android:gravity="center"/>        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="WE"            android:textStyle="bold"            android:textColor="@color/black"            android:textSize="12sp"            android:gravity="center"/>        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="TH"            android:textStyle="bold"            android:textColor="@color/black"            android:textSize="12sp"            android:gravity="center"/>        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="FR"            android:textStyle="bold"            android:textColor="@color/black"            android:textSize="12sp"            android:gravity="center"/>        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="SA"            android:textStyle="bold"            android:textColor="@color/black"            android:textSize="12sp"            android:gravity="center"/>        <TextView            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"            android:text="SU"            android:textStyle="bold"            android:textColor="@color/black"            android:textSize="12sp"            android:gravity="center"/>    </LinearLayout>    <LinearLayout        android:id="@+id/week_day"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="186dp"        android:layout_marginHorizontal="25dp"        android:orientation="horizontal"        android:weightSum="7">        <View            android:layout_width="0dp"            android:layout_height="wrap_content"            android:layout_weight="1"/>    </LinearLayout><TextView    android:layout_width="174dp"    android:layout_height="174dp"    android:text="5,924 \n steps"    android:textColor="@color/white"    android:textSize="24sp"    android:gravity="center"    android:background="@drawable/text_bc"    android:layout_centerInParent="true"/>    <de.hdodenhof.circleimageview.CircleImageView        android:layout_width="70dp"        android:layout_height="70dp"        android:src="@drawable/img_2"        android:layout_centerHorizontal="true"        android:layout_marginTop="497dp"/>        <ProgressBar        android:layout_width="300dp"        android:layout_height="300dp"        android:progress="50"        android:max="100"        android:indeterminateOnly="false"        android:progressDrawable="@drawable/custom_progress_bc"        android:layout_centerInParent="true"        android:progressBackgroundTint="#14213D"/></RelativeLayout>